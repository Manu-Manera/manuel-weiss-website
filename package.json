{
  "name": "manuel-weiss-website",
  "version": "2.0.0",
  "description": "Professionelle Website mit KI-gestütztem Bewerbungsmanager, AWS-Backend und vollständiger Business-Lösung",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 3000 -c-1",
    "dev": "http-server -p 3000 -c-1 --cors",
    "build": "npm run build:api-docs && npm run build:pwa",
    "build:api-docs": "chmod +x docs/api/build.sh && ./docs/api/build.sh",
    "build:pwa": "echo 'PWA assets already generated'",
    "deploy": "echo 'Deploy via GitHub Desktop to Netlify'",
    "deploy:staging": "netlify deploy --dir=. --site=$NETLIFY_SITE_ID_STAGING",
    "deploy:production": "netlify deploy --dir=. --prod --site=$NETLIFY_SITE_ID_PRODUCTION",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:accessibility": "playwright test --project=accessibility",
    "test:performance": "lighthouse-ci autorun",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "sw:generate": "workbox generateSW workbox-config.js",
    "sw:inject": "workbox injectManifest workbox-config.js",
    "analyze": "webpack-bundle-analyzer dist/static/js/*.js",
    "validate:openapi": "swagger-cli validate docs/api/openapi.yaml",
    "validate:redoc": "redoc-cli lint docs/api/openapi.yaml",
    "components:install": "cd components && npm install",
    "components:build": "cd components && npm run build",
    "components:dev": "cd components && npm run dev",
    "lambda:deploy": "echo 'Lambda deployment handled by AWS Amplify'",
    "analytics": "echo 'Analytics dashboard available at analytics-dashboard.html'",
    "admin": "echo 'Admin panel available at admin.html'"
  },
  "keywords": [
    "bewerbung",
    "coaching",
    "personal-training",
    "ernaehrungsberatung",
    "business-consulting",
    "coverlettergpt",
    "ai",
    "aws",
    "github-pages",
    "react",
    "chakra-ui",
    "openai",
    "sendgrid",
    "lambda",
    "dynamodb",
    "s3",
    "cognito",
    "api-gateway"
  ],
  "author": "Manuel Weiss",
  "license": "UNLICENSED",
  "homepage": "https://manu-manera.github.io/manuel-weiss-website",
  "repository": {
    "type": "git",
    "url": "https://github.com/Manu-Manera/manuel-weiss-website.git"
  },
  "bugs": {
    "url": "https://github.com/Manu-Manera/manuel-weiss-website/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "lighthouse-ci": "^0.12.0",
    "prettier": "^3.0.0",
    "redoc-cli": "^0.13.21",
    "swagger-cli": "^4.0.4",
    "webpack-bundle-analyzer": "^4.9.0",
    "workbox-cli": "^7.0.0"
  },
  "dependencies": {
    "@uppy/aws-s3": "^3.0.0",
    "@uppy/core": "^3.0.0",
    "@uppy/dashboard": "^3.0.0",
    "aws-amplify": "^5.3.0",
    "chart.js": "^4.4.0",
    "font-awesome": "^6.0.0",
    "photoswipe": "^5.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "zod": "^3.22.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.0"
  },
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 versions",
      "not dead"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "workspaces": [
    "components"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn"
    }
  }
}