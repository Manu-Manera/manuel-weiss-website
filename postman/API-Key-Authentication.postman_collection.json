		{
			"name": "2. Get Challenge",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Challenge received\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('challenge');",
							"    ",
							"    // Speichere Challenge f√ºr Signatur (in Environment UND Collection)",
							"    if (jsonData.challenge) {",
							"        pm.environment.set('challenge', jsonData.challenge);",
							"        pm.collectionVariables.set('challenge', jsonData.challenge);",
							"        console.log('‚úÖ Challenge gespeichert:', jsonData.challenge);",
							"        console.log('');",
							"        console.log('üìã N√§chster Schritt: Challenge signieren');",
							"        console.log('');",
							"        console.log('üí° EINFACHSTE METHODE (empfohlen):');",
							"        console.log('1. Kopiere die Challenge in eine Datei:');",
							"        console.log('   echo \"' + jsonData.challenge + '\" > challenge.txt');",
							"        console.log('');",
							"        console.log('2. Signiere:');",
							"        const apiKeyId = pm.environment.get('apiKeyId') || pm.collectionVariables.get('apiKeyId');",
							"        console.log('   node scripts/sign-challenge.js --file challenge.txt \"keys/' + apiKeyId + '-private-key.pem\"');",
							"        console.log('');",
							"        console.log('üí° ALTERNATIVE: Aus Zwischenablage');",
							"        console.log('1. Kopiere Challenge in Zwischenablage (Cmd+C)');",
							"        console.log('2. F√ºhre aus:');",
							"        console.log('   node scripts/sign-challenge.js --clipboard \"keys/' + apiKeyId + '-private-key.pem\"');",
							"        console.log('');",
							"        console.log('Dann setze die Signature in Postman Environment Variable: signature');",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"apiKeyId\": \"{{apiKeyId}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
