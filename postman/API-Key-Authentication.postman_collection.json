		{
			"name": "2.5. Generate Signature (automatisch)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Signature received\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('signature');",
							"    ",
							"    // Speichere Signature automatisch",
							"    if (jsonData.signature) {",
							"        pm.environment.set('signature', jsonData.signature);",
							"        pm.collectionVariables.set('signature', jsonData.signature);",
							"        console.log('‚úÖ Signature gespeichert!');",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"challenge\": \"{{challenge}}\",\n  \"apiKeyId\": \"{{apiKeyId}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
