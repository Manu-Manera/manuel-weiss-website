					"listen": "prerequest",
					"script": {
						"exec": [
							"// Pr√ºfe ob alle ben√∂tigten Variablen gesetzt sind",
							"const apiKeyId = pm.environment.get('apiKeyId') || pm.collectionVariables.get('apiKeyId');",
							"const challenge = pm.environment.get('challenge') || pm.collectionVariables.get('challenge');",
							"const signature = pm.environment.get('signature') || pm.collectionVariables.get('signature');",
							"",
							"console.log('üîç Pr√ºfe Variablen:');",
							"console.log('  apiKeyId:', apiKeyId ? '‚úÖ gesetzt' : '‚ùå fehlt');",
							"console.log('  challenge:', challenge ? '‚úÖ gesetzt' : '‚ùå fehlt');",
							"console.log('  signature:', signature ? '‚úÖ gesetzt' : '‚ùå fehlt');",
							"",
							"if (!signature || signature === '' || signature === 'Enter value') {",
							"    console.log('');",
							"    console.log('‚ö†Ô∏è  SIGNATURE FEHLT!');",
							"    console.log('');",
							"    console.log('üí° F√ºhre zuerst Request 2.5 aus: \"Generate Signature (automatisch)\"');",
							"    console.log('   Oder starte Signing-Server: node scripts/sign-challenge-server.js');",
							"    console.log('');",
							"}",
							"",
							"if (!challenge || challenge === '' || challenge === 'Enter value') {",
							"    console.log('');",
							"    console.log('‚ö†Ô∏è  CHALLENGE FEHLT!');",
							"    console.log('F√ºhre zuerst Request 2 (Get Challenge) aus!');",
							"}"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Token received\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success', true);",
							"    pm.expect(jsonData).to.have.property('token');",
							"    ",
							"    // Speichere Token automatisch",
							"    if (jsonData.token) {",
							"        pm.environment.set('apiKeyToken', jsonData.token);",
							"        pm.collectionVariables.set('apiKeyToken', jsonData.token);",
							"        console.log('‚úÖ Token gespeichert! G√ºltig f√ºr', jsonData.expiresIn, 'Sekunden');",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
