from docx import Document
from docx.shared import Inches
from docx.enum.text import WD_PARAGRAPH_ALIGNMENT
from docx.shared import Pt

# Create a simple logo placeholder image for "Deel"
from PIL import Image, ImageDraw, ImageFont

img = Image.new('RGB', (200, 60), color='white')
d = ImageDraw.Draw(img)
try:
    font = ImageFont.truetype("arial.ttf", 36)
except IOError:
    font = ImageFont.load_default()
text = "DEEL"
text_width, text_height = d.textsize(text, font=font)
d.text(((200 - text_width) / 2, (60 - text_height) / 2), text, fill='black', font=font)
logo_path = '/mnt/data/deel_logo_placeholder.png'
img.save(logo_path)

# Create document
doc = Document()

# Header table for logo
table = doc.add_table(rows=1, cols=2)
table.autofit = False
table.columns[0].width = Inches(4.5)
table.columns[1].width = Inches(2)

# Left cell empty (could hold sender address later)
left_cell = table.rows[0].cells[0]
right_cell = table.rows[0].cells[1]
p = right_cell.paragraphs[0]
run = p.add_run()
run.add_picture(logo_path, width=Inches(2))

# Add some space
doc.add_paragraph("")

# Sender Address
sender_para = doc.add_paragraph("Manuel Weiss\nPilatusstrasse 40\n8330 PfÃ¤ffikon ZH\n+41 79 838 55 90\nweiss-manuel@gmx.de")
sender_para.alignment = WD_PARAGRAPH_ALIGNMENT.LEFT

# Recipient Address
doc.add_paragraph("Beekeeper AG\nRÃ¤ffelstrasse 24\n8045 ZÃ¼rich")

# Date and Subject
doc.add_paragraph("\nPfÃ¤ffikon (ZH), 22 July 2025\n")
