from docx import Document
from docx.enum.text import WD_ALIGN_PARAGRAPH

# Create document
doc = Document()

# Sender address
sender = ["Manuel Weiss", "Pilatusstrasse 40", "8330 Pfäffikon ZH"]
for line in sender:
    doc.add_paragraph(line)

doc.add_paragraph()  # blank line

# Recipient address
recipient = [
    "Capgemini Schweiz AG",
    "Ambassador House",
    "Thurgauerstrasse 101A",
    "8152 Glattpark (Opfikon)"
]
for line in recipient:
    doc.add_paragraph(line)

# Date right aligned
date_para = doc.add_paragraph("Pfäffikon (ZH), 29. Juli 2025")
date_para.alignment = WD_ALIGN_PARAGRAPH.RIGHT

doc.add_paragraph()  # blank line

# Subject
subject = doc.add_paragraph("Bewerbung als HR-Strategieberater (Remote)")
subject.style = doc.styles['Heading 1']

doc.add_paragraph()  # blank

