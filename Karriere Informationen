from docx import Document
from docx.shared import Inches
from docx.enum.text import WD_PARAGRAPH_ALIGNMENT
from docx.shared import Pt

# Create a simple logo placeholder image for "Deel"
from PIL import Image, ImageDraw, ImageFont

img = Image.new('RGB', (200, 60), color='white')
d = ImageDraw.Draw(img)
try:
    font = ImageFont.truetype("arial.ttf", 36)
except IOError:
    font = ImageFont.load_default()
text = "DEEL"
text_width, text_height = d.textsize(text, font=font)
d.text(((200 - text_width) / 2, (60 - text_height) / 2), text, fill='black', font=font)
logo_path = '/mnt/data/deel_logo_placeholder.png'
img.save(logo_path)

# Create document
doc = Document()

# Header table for logo
table = doc.add_table(rows=1, cols=2)
table.autofit = False
table.columns[0].width = Inches(4.5)
table.columns[1].width = Inches(2)

# Left cell empty (could hold sender address later)
left_cell = table.rows[0].cells[0]
right_cell = table.rows[0].cells[1]
p = right_cell.paragraphs[0]
run = p.add_run()
run.add_picture(logo_path, width=Inches(2))

# Add some space
doc.add_paragraph("")

# Sender Address
sender_para = doc.add_paragraph("Manuel Weiss\nPilatusstrasse 40\n8330 Pfäffikon ZH\n+41 79 838 55 90\nweiss-manuel@gmx.de")
sender_para.alignment = WD_PARAGRAPH_ALIGNMENT.LEFT

# Recipient Address
doc.add_paragraph("Beekeeper AG\nRäffelstrasse 24\n8045 Zürich")

# Date and Subject
doc.add_paragraph("\nPfäffikon (ZH), 22 July 2025\n")
subject = doc.add_paragraph("Application for Solutions Architect")
subject.runs[0].bold = True

# Salutation and body
body = (
"Dear Sir or Madam,\n\n"
"I noticed your LinkedIn posting for a Solutions Architect and would like to apply for the position.\n\n"
"For more than six years I have led customers through SaaS integrations that connect HR systems to cloud platforms, "
"most recently as a consultant at HR Campus. I translated business requirements into reliable workflows, orchestrated "
"SFTP synchronisations, linked employee-data systems and delivered SAML-based single-sign-on—while meeting every project "
"goal for time, budget and quality. Acting between sales and product management taught me to package technical concepts "
"for C-level sponsors and non-technical stakeholders alike, steering work in Kanban as well as in classic project plans "
"until every API endpoint performed as promised.\n\n"
"Because integration is seldom finished at go-live, I stay involved afterwards, refining processes and turning user "
"feedback into practical solutions. To broaden my developer toolkit, I am currently completing an intensive Python "
"course so that I can prototype transformation scripts and custom connectors myself.\n\n"
"Beekeeper’s mission to improve the working lives of frontline teams mirrors my own enthusiasm for technology that "
"serves people who are rarely digitised first. Your focus on scalable, purpose-built integrations matches the way I "
"design architecture: start with clear use cases, plan for change and measure value in the users’ everyday work. A "
"native German speaker with business-fluent English, I switch languages effortlessly in workshops and documentation and "
"enjoy working in multicultural remote teams.\n\n"
"I would be pleased to discuss my fit for the Solutions Architect role in person (on-site or virtually) and look forward "
"to hearing from you.\n\n"
"Kind regards,\n\n"
"Manuel Weiss"
)

doc.add_paragraph(body)

file_path = "/mnt/data/Manuel_Weiss_Application_Solutions_Architect_Beekeeper.docx"
