{
  "name": "ai-investment-tests",
  "version": "1.0.0",
  "description": "Comprehensive Test Suite for AI Investment System",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:security": "jest tests/security",
    "test:performance": "jest tests/performance",
    "test:accessibility": "jest tests/accessibility",
    "test:live": "jest tests/live",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint tests --ext .ts,.js",
    "lint:fix": "eslint tests --ext .ts,.js --fix"
  },
  "dependencies": {
    "@ai-investment/common": "file:../packages/common",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1691.0",
    "axios": "^1.6.2",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "puppeteer": "^21.6.1",
    "@types/puppeteer": "^7.0.4",
    "playwright": "^1.40.1",
    "@playwright/test": "^1.40.1",
    "k6": "^0.47.0",
    "artillery": "^2.0.0",
    "lighthouse": "^11.4.0",
    "axe-core": "^4.8.2",
    "pa11y": "^7.0.0",
    "sonarjs": "^1.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testTimeout": 30000,
    "maxWorkers": 4,
    "verbose": true
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "investment",
    "testing",
    "jest",
    "e2e",
    "integration",
    "unit"
  ],
  "author": "AI Investment System",
  "license": "MIT"
}
